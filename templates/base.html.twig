<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}
    </head>
    <body>
        <header>
            <nav>
                <ul>
                {% if app.user %}
                    <li><a href="{{ path('app_home') }}">Acceuil</a></li>
                    <li><a href="{{ path('app_session') }}">Sessions</a></li>
                    <li><a href="{{ path('app_categorie') }}">Catégories</a></li>
                    <li><a href="{{ path('app_module') }}">Modules</a></li>
                    <li><a href="{{ path('app_stagiaire') }}">Stagiaires</a></li>
                    {% if is_granted("ROLE_ADMIN") %}
                        <li><a href="">Panel administrateur</a></li>
                    {% endif %}
                    <li><a href="{{ path('app_logout') }}">Se deconnecter</a></li> 
                {% else %}
                    <li><a href="{{ path('app_home') }}">Acceuil</a></li>
                    <li><a href="{{ path('app_session') }}">Sessions</a></li>
                    <li><a href="{{ path('app_categorie') }}">Catégories</a></li>
                    <li><a href="{{ path('app_module') }}">Modules</a></li>
                    <li><a href="{{ path('app_stagiaire') }}">Stagiaires</a></li>
                    <li><a href="{{ path('app_programme') }}">Programmes</a></li>
                    <li><a href="{{ path('app_login') }}">Se connecter</a></li>                    
                {% endif %}

                </ul>
            </nav>
        </header>
        {% block body %}
        
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/script.js') }}"></script>
        {% endblock %}
    </body>
</html>
